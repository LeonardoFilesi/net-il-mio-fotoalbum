﻿@{
    Layout = "_Layout";
}
@model Image

<div class="container detailpizza text-center">

    <div class="title mt-4 w-50"><h1 class="mt-3 mb-3">DETTAGLI DI: @Model.Title</h1></div>


    <div class="singleimage text-center mt-4">
        <img width="500" src="@Model.ImageSrc">
    </div>

    <div class="title text-center w-25 mt-4 mb-4">

        <p>DESCRIZIONE: @Model.Description</p>

        <p>
            <sp>CATEGORIE:</sp>
            @if (Model.Categories != null && Model.Categories.Count > 0)
                {
                <ul>
                    @foreach (Category category in Model.Categories)
                        {
                        <li>@category.Name</li>
                        }
                </ul>
                }
                else
                {
                <span>Non è stata ancora compilata la lista degli categorie</span>
                }
        </p>

    </div>

</div>