﻿@{
    Layout = "_Layout";
}
@model ImageFormModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Aggiorna una Foto esistente</h1>
        </div>
        <form asp-controller="Image" asp-action="Update" asp-route-id="@Model.Image.Id" method="post" enctype="multipart/form-data">
            <!-- enctype="multipart/form-data" DA AGGIUNGERE SEMPRE per poter fare upload di files ed evitare ^^^^^^^^^^^^^^^^^^^^^ che vengano ignorati -->

            @Html.AntiForgeryToken()         <!--DA METTERE SEMPRE PER LA SICUREZZA DEL CODICE-->

            <div class="mb-3">
                <strong>Titolo:</strong>
                <input type="text" class="form-control" asp-for="Image.Title">
                <span asp-validation-for="Image.Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <strong>Descrizione:</strong>
                <input type="text" class="form-control" asp-for="Image.Description">
                <span asp-validation-for="Image.Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <strong>Ingredienti:</strong>
                <select asp-for="SelectedCategoryId"
                        multiple="multiple"
                        size="10"
                        class="form-control mb-2 mr-sm-2 ml-sm-3 leftList"
                        asp-items="@Model.Category">
                </select>
            </div>

            <div class="mb-3">
                <strong>URL Immagine:</strong>
                <input type="text" class="form-control" asp-for="Image.ImgUrl">
                <span asp-validation-for="Image.ImgUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <strong>Upload Immagine:</strong>
                <img src="@Model.Image.ImageSrc" height="200">
                <label asp-for="ImageFormFile">Image file</label>
                <input type="file" asp-for="ImageFormFile" />
                <span asp-validation-for="ImageFormFile" class="text-error"></span>
            </div>


            <button type="submit" class="btn btn-primary">Aggiorna la Foto</button>

        </form>
    </div>
</div>